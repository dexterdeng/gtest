.navbar.navbar-default.navbar-static-top
  .container
    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav
        %li{class: params[:controller] == 'articles' ? 'active' : ''}= link_to "文章", articles_path
        %li{class: params[:controller] == 'posts' ? 'active' : ''}= link_to "短博客", posts_path

      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li.dropdown
            = link_to "javascript:;", class: 'dropdown-toggle' , 'data-toggle': "dropdown" do
              = current_user
              %span.caret
            %ul.dropdown-menu
              %li= link_to '修改密码', edit_user_registration_path
              %li= link_to '注销', destroy_user_session_path, method: :delete

        - else
          %li= link_to('注册', new_registration_path(:user))
          %li= link_to('登陆', new_user_session_path)




