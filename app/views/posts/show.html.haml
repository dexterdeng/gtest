- model_class = Post
.page-header
  %h4= @post.title

%p= @post.description

%br


= link_to  posts_path, :class => 'btn btn-default btn-xs', :style => "margin-right: 10px;"  do
  %i.fa.fa-angle-left
= link_to edit_article_path(@post), :class => 'btn btn-default btn-xs', :style => "margin-right: 10px;" do
  %i.fa.fa-pencil
= link_to  article_path(@post), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger', :style => "margin-right: 10px;"  do
  %i.fa.fa-remove

