- model_class = Article
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @articles.each do |article|
      %tr
        %td= link_to article.id, article_path(article)
        %td
          = link_to  article_path(article) do
            = article.title
            - if article.comments_count > 0
              %i.fa.fa-comments
              = article.comments_count
        %td= article.user
        %td=l article.created_at
        %td
          = link_to edit_article_path(article), :class => 'btn btn-default btn-xs', :style => "margin-right: 10px;" do
            %i.fa.fa-pencil
          = link_to  article_path(article), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger' do
            %i.fa.fa-remove



= link_to t('.new', :default => t("helpers.links.new")), new_article_path, :class => 'btn btn-primary'
